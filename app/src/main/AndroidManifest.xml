<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shmagins.superbrain">
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/brain_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.shmagins.superbrain.BrainApplication">
        <activity android:name="com.shmagins.superbrain.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.shmagins.superbrain.view.CalcGameActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"
            android:launchMode="singleTop">
        </activity>
        <activity android:name="com.shmagins.superbrain.view.PairGameActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"
            android:launchMode="singleTop"/>
        <activity android:name="com.shmagins.superbrain.view.SettingsActivity"/>
        <activity android:name="com.shmagins.superbrain.view.MemoryGameActivity"
            android:launchMode="singleTop"/>
        <activity android:name="com.shmagins.superbrain.view.CalcGameResultActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".view.CalcGameLevelsActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".view.PairGameLevelsActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".view.MemoryGameLevelsActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".view.PairGameResultActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".view.MemoryGameResultActivity"
            android:launchMode="singleTop"/>
        <service android:name=".MusicService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback"
            android:stopWithTask="true" />
    </application>

</manifest>