<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.widget.Button"/>
        <import type="androidx.recyclerview.widget.RecyclerView" />
        <variable
            name="calculation"
            type="com.shmagins.easyenglish.db.Calculation" />
        <variable
            name="recycler"
            type="androidx.recyclerview.widget.RecyclerView" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <TextView
            android:id="@+id/first"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:text="@{String.valueOf(calculation.first)}"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toStartOf="@+id/operation"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <TextView
            android:id="@+id/operation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@{calculation.operation}"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toStartOf="@+id/second"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/first"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <TextView
            android:id="@+id/second"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="left"
            android:text="@{String.valueOf(calculation.second)}"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/operation"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="67dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="165dp" />

        <EditText
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:ems="3"
            android:focusable="false"
            android:gravity="center"
            android:inputType="number"
            android:text='@{(calculation.answer == Integer.MIN_VALUE) ? "" : calculation.answer}'
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="264dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="136dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="272dp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.63"
            tools:layout_editor_absoluteX="1dp" />

        <Button
            android:id="@+id/button11"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.63"
            tools:layout_editor_absoluteX="137dp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.63"
            tools:layout_editor_absoluteX="274dp" />

        <Button
            android:id="@+id/button14"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.76"
            tools:layout_editor_absoluteX="138dp" />

        <Button
            android:id="@+id/button13"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.76"
            tools:layout_editor_absoluteX="2dp" />

        <Button
            android:id="@+id/button15"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.76"
            tools:layout_editor_absoluteX="275dp" />

        <Button
            android:id="@+id/button16"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.89"
            tools:layout_editor_absoluteX="1dp" />

        <Button
            android:id="@+id/button17"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.89"
            tools:layout_editor_absoluteX="137dp" />

        <Button
            android:id="@+id/button18"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.89"
            tools:layout_editor_absoluteX="274dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>