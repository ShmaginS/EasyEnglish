<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Настройки">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_enable_music"
            android:summaryOff="@string/pref_music_off"
            android:summaryOn="@string/pref_music_on"
            android:title="@string/pref_enable_music" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_enable_sound"
            android:summaryOff="@string/pref_sound_off"
            android:summaryOn="@string/pref_sound_on"
            android:title="@string/pref_enable_sound" />
    </PreferenceCategory>
</PreferenceScreen>